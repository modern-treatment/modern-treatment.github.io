	function telCode(){
	    var cntrCode = $('select.country option:selected').val();
	    $('.country-icon img').prop('src', 'http://hotdisk.org/flags/' + $.cookie('hotprice_country').toLowerCase() + '.png');
		$.ajax({
			url: 'http://hotdisk.org/flags/phone2.json?format=json',
			dataType: 'json',
			jsonpCallback: 'MyJSONPCallback', 
			success: function(data){
			  phonecode = data[cntrCode];
			  $('#rc-phone-input').attr('placeholder', phonecode +'..(ваш номер)');
			  $('#rc-phone-input').focus(function() {
				if($(this).val().length == 0){
				  $(this).val(phonecode);
				}
			  });    
			}
		});
	}
	
